{
  "name": "etf-trend-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "api": "uv run uvicorn etf_trend.api.main:app --reload",
    "ui": "npm run dev --prefix src/web",
    "dev": "concurrently \"npm run api\" \"npm run ui\"",
    "setup": "uv sync && npm install --prefix src/web",
    "test": "uv run pytest src/etf_trend/tests/",
    "lint": "uv run ruff check src/etf_trend/",
    "lint:fix": "uv run ruff check src/etf_trend/ --fix",
    "format": "uv run black src/etf_trend/",
    "format:check": "uv run black src/etf_trend/ --check",
    "check": "npm run lint && npm run format:check && npm run test"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
